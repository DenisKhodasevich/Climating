mixin header({ info, logo, sections })
  header.header
    .header__info.white
      div(class="header__info-item")
        i(class="header__info-icon material-icons orange-text text-lighten-2") home
        | #{info.address}

      a(class="header__info-item" href=`tel: ${info.phone}`)
        i(class="header__info-icon material-icons orange-text text-lighten-2") phone
        | #{info.phone}

      a(class="header__info-item" href=`mailto: ${info.email}`)
        i(class="header__info-icon material-icons orange-text text-lighten-2") email
        | #{info.email}

      div(class="header__info-item")
        i(class="header__info-icon material-icons orange-text text-lighten-2") access_time
        | #{info.workingHours}

    nav(class="header__nav nav-extended indigo darken-2 pushpin")
      div(class="nav-wrapper")
        a(href="index.html" class="brand-logo")
          img(class="header__logo" alt="logo", src=logo)

        a(href="#" data-target="mobile-demo" class="sidenav-trigger")
          i(class="material-icons") menu

        ul(id="nav-mobile" class="right hide-on-med-and-down")
          each item in sections
            li
              a(class="header__link waves-effect waves-light" href=`#${item}`)=item

          li
            a(class="waves-effect waves-light btn" href="#order") to order

    ul(class="sidenav grey lighten-4" id="mobile-demo")
      each item in sections
        li
          a(class="header__link waves-effect" href=`#${item}`)=item

      li
        a(class="waves-effect btn" href="#order") to order