mixin header({ info, logo, sections })
  .header
    .header__info.white
      .header__info-item
        i.header__info-icon.material-icons.orange-text.text-lighten-2 home
        span.grey-text.text-darken-4=info.address

      a(class="header__info-item" href=`tel: ${info.phone}`)
        i.header__info-icon.material-icons.orange-text.text-lighten-2 phone
        span.grey-text.text-darken-4=info.phone

      a(class="header__info-item" href=`mailto: ${info.email}`)
        i.header__info-icon.material-icons.orange-text.text-lighten-2 email
        span.grey-text.text-darken-4=info.email

      .header__info-item
        i.header__info-icon.material-icons.orange-text.text-lighten-2 access_time
        span.grey-text.text-darken-4=info.workingHours

    nav.header__nav.nav-extended.indigo.darken-2.pushpin
      .nav-wrapper
        a(href="index.html" class="brand-logo")
          img(class="header__logo" alt="logo", src=logo)

        a(href="#" data-target="mobile-demo" class="sidenav-trigger")
          i(class="material-icons") menu

        ul#nav-mobile.right.hide-on-med-and-down
          each item in sections
            li
              a(class="header__link waves-effect waves-light" href=`#${item}`)=item

          li
            a(class="waves-effect waves-light btn" href="#order") to order

    ul.sidenav.grey.lighten-4#mobile-demo
      each item in sections
        li
          a(class="header__link waves-effect" href=`#${item}`)=item

      li
        a(class="waves-effect btn" href="#order") to order